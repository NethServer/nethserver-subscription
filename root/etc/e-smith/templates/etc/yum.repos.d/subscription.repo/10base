{
    $systemId = $subscription{'SystemId'} || "";
    $secret = $subscription{'Secret'} || "";
    $enabled = ($systemId ne "" && $secret ne "") ? 1 : 0;
    '';
}
[sb-base]
name=Stable mirror: CentOS Base $releasever
mirrorlist=https://mirrorlist.nethserver.com/?repo=base&arch=$basearch&nsversion=$nsrelease&usetier=$YUM0
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-CentOS-$releasever
username={$systemId}
password={$secret}
gpgcheck=1
repo_gpgcheck=1
enablegroups=0
enabled={$enabled}
http_caching=none
mirrorlist_expire=7200
metadata_expire=7200

[sb-updates]
name=Stable mirror: CentOS Updates $releasever
